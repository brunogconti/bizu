  <h2 class="mt-3"><%= @course.name %></h2>
<div class="d-flex justify-content-between">
  <div>
    <p><%= @course.institution.name %> - <%= @course.institution.initials %></p>
    <p><%= @course.unit.name %> - <%= @course.citie.name %></p>
  </div>
    <% if @favorite.present? %>
      <%= button_to bookmark_path(@favorite), method: :delete,
                                params: {course_id: params[:id]},
                                remote: true,
                                class: "br-button secondary circle large mt-3 mt-sm-0 ml-sm-3" do %>
      <i class="fas fa-heart" aria-hidden="true"></i>
      <% end %>
    <% else %>
      <%= button_to [@bookmark], method: :post,
                                params: {course_id: params[:id]},
                                remote: true,
                                class: "br-button secondary circle large mt-3 mt-sm-0 ml-sm-3" do %>
      <i class="far fa-heart" aria-hidden="true"></i>
      <% end %>
    <% end %>
</div>

<div class="br-tab">
  <nav class="tab-nav">
    <ul>
      <li class="tab-item active">
        <button type="button" data-panel="panel-1"><span class="name">Sobre</span></button>
      </li>
      <li class="tab-item">
        <button type="button" data-panel="panel-2"><span class="name">SiSU</span></button>
      </li>
      <li class="tab-item">
        <button type="button" data-panel="panel-3"><span class="name">Campus</span></button>
      </li>
      <li class="tab-item">
        <button type="button" data-panel="panel-4"><span class="name">Cidade</span></button>
      </li>
    </ul>
  </nav>
  <div class="tab-content active">
    <div class="tab-panel" id="panel-1">
      <p>Painel Sobre</p>
      <%= render 'courses/show/sobre', course: @course %>
    </div>
    <div class="tab-panel" id="panel-2">
      <%= render 'courses/show/admissao', course: @course %>
    </div>
    <div class="tab-panel" id="panel-3">
      <%= render 'courses/show/campus', course: @course %>
    </div>
    <div class="tab-panel" id="panel-4">
      <%= render 'courses/show/cidade', course: @course %>
    </div>
  </div>
</div>
